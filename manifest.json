{
  "name": "Pelicon Facebook",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Minimal versison of Facebook!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "http://*.google.com/*",
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "assets/js/jquery.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Pelicon Facebook",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/*"
      ],
      "css": [
        "style_facebook.css"
      ],
      "js": [
        "style_facebook.js",
        "js/jquery.min.js",
        "js/on-off-switch.js",
        "js/on-off-switch-onload.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.google.com https://checkout.google.com; object-src 'self'"
}